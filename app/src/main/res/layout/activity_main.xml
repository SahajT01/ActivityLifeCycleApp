<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="#1B4F72">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity A"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="20dp" />

    <Button
        android:id="@+id/startActivityBButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Activity B"
        android:textColor="#000000"
        android:background="#FFFF00"
        android:padding="10dp"
        android:layout_margin="5dp" />

    <Button
        android:id="@+id/startActivityCButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Activity C"
        android:textColor="#000000"
        android:background="#FFFF00"
        android:padding="10dp"
        android:layout_margin="5dp" />

    <Button
        android:id="@+id/dialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog"
        android:textColor="#000000"
        android:background="#FFFF00"
        android:padding="10dp"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/threadCounterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thread Counter: 0001"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/onRestartCounterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onRestart Counter: 0000"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/closeAppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close App"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:layout_marginTop="20dp" />

</LinearLayout>